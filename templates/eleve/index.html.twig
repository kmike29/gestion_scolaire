{% extends 'base.html.twig' %}

{% block title %}Eleve index{% endblock %}

{% block body %}
    <h1>Eleve index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenoms</th>
                <th>Nationalite</th>
                <th>LieuDeNaissance</th>
                <th>Sexe</th>
                <th>DateDeNaissance</th>
                <th>DateDInscription</th>
                <th>InscriptionComplete</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for eleve in eleves %}
            <tr>
                <td>{{ eleve.id }}</td>
                <td>{{ eleve.nom }}</td>
                <td>{{ eleve.prenoms }}</td>
                <td>{{ eleve.nationalite }}</td>
                <td>{{ eleve.ecoleDeProvenance }}</td>
                <td>{{ eleve.matricule }}</td>
                <td>{{ eleve.lieuDeNaissance }}</td>
                <td>{{ eleve.photo }}</td>
                <td>{{ eleve.sexe }}</td>
                <td>{{ eleve.dateDeNaissance ? eleve.dateDeNaissance|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ eleve.observations }}</td>
                <td>{{ eleve.personneAContacter1 }}</td>
                <td>{{ eleve.personneAContacter2 }}</td>
                <td>{{ eleve.numeroContact1 }}</td>
                <td>{{ eleve.numeroContact2 }}</td>
                <td>{{ eleve.dateDInscription ? eleve.dateDInscription|date('Y-m-d') : '' }}</td>
                <td>{{ eleve.inscriptionComplete ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_eleve_show', {'id': eleve.id}) }}">show</a>
                    <a href="{{ path('app_eleve_edit', {'id': eleve.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="18">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_eleve_new') }}">Create new</a>
{% endblock %}
